
<DiceScreen>:

    dice1: dice1
    dice2: dice2
    sum_label: sum_label

    BoxLayout:
        size: root.size
        pos: root.pos

        orientation: 'vertical'
        padding: 10

        canvas:
            Color:
                rgb: 0.1, 0.1, 0.1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgb: 0.9, 0.9, 0.9

        BoxLayout:
            orientation: 'horizontal'
            padding: 10
            spacing: 20

            DiceWidget:
                id: dice1

            DiceWidget:
                id: dice2

        Label:
            text: '?'
            font_size: '60sp'
            id: sum_label

        Button:
            text: 'Roll'
            font_size: '40sp'
            on_press: root.roll_dice()
